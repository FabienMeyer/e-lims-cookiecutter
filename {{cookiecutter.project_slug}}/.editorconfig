# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.{diff,patch}]
trim_trailing_whitespace = false

# Python - Files
[*.py]
max_line_length = 120

# reStructuredText - Files
[*.rst]
indent_size = 4
